{
	"name": "ProcessNYCTaxiData",
	"properties": {
		"activities": [
			{
				"name": "DownloadEachFile",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.FilesToCopy",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "CopyTaxiData",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "BinarySource",
									"storeSettings": {
										"type": "HttpReadSettings",
										"requestMethod": "GET"
									}
								},
								"sink": {
									"type": "BinarySink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "NYC_Taxi_Data_Source",
									"type": "DatasetReference",
									"parameters": {
										"RelativeURL": {
											"value": "@item().source",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "NYC_Taxi_Data_Destination",
									"type": "DatasetReference",
									"parameters": {
										"FileSystem": {
											"value": "@item().destfilesystem",
											"type": "Expression"
										},
										"Directory": {
											"value": "@item().destdirectory",
											"type": "Expression"
										},
										"File": {
											"value": "@item().File",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"FilesToCopy": {
				"type": "array",
				"defaultValue": [
					{
						"source": "nyc-tlc/trip+data/yellow_tripdata_2019-01.csv",
						"destination": "/raw/yellow/tripdata/2019/01/yellow01.csv"
					},
					{
						"source": "nyc-tlc/trip+data/green_tripdata_2019-01.csv",
						"destination": "/raw/green/tripdata/2019/01/green01.csv"
					}
				]
			}
		},
		"annotations": []
	}
}